<% layout('layout')%>
<div class="container-sm d-flex justify-content-center align-items-center">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1516738901171-8eb4fc13bd20?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80"
                alt="" class="img-fluid"/>
                <div class="card-body">
                    <h5 class="card-title">Enter New Location</h5>
                        <form action="/new" method="POST">
                            <div class="mb-3">
                                
                                <input class="form-control" type="text" name="location" required>
                            </div>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-success">Add location</button>
                            </div>
                        </form>

                </div>
            </div>
        </div>
    </div>
</div> 